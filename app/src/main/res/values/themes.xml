<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorPrimaryVariant">@color/gray_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="styleBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_1dp</item>
        <item name="android:layout_weight">@dimen/layoutWidth_025dp</item>
        <item name="android:textColor">@color/textColorAll</item>
        <item name="android:textSize">@dimen/textSize30</item>
        <item name="backgroundTint">@color/btn_clr</item>
    </style>

    <style name="styleBottFunc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_1dp</item>
        <item name="android:layout_weight">@dimen/layoutWidth_025dp</item>
        <item name="android:textColor">@color/textColorAll</item>
        <item name="android:textSize">@dimen/textSize30</item>
        <item name="backgroundTint">@color/textColorFunction</item>
    </style>

    <style name="styleBottFinal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_1dp</item>
        <item name="android:layout_weight">@dimen/layoutWidth_025dp</item>
        <item name="android:textColor">@color/textColorAll</item>
        <item name="android:textSize">@dimen/textSize30</item>
        <item name="backgroundTint">@color/finalFunc</item>
    </style>

    <style name="styleTextedit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textSize30</item>
        <item name="background">@color/editTextColor</item>
    </style>

    <style name="styleSecLoy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize30</item>
        <item name="android:layout_weight">@dimen/layoutMarginWeight02</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="styLoyEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/layoutMarginWeight03</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="styMainLoy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/layoutMarginWeight03</item>
        <item name="android:background">@color/editTextColor</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>